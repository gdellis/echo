# EditorConfig is awesome: https://editorconfig.org

# Top-most EditorConfig file
root = true

# Default settings for all files
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8
indent_style = space

# Python files
[*.py]
indent_size = 4
max_line_length = 120

# Markdown files
[*.md]
max_line_length = 120
trim_trailing_whitespace = false

# JSON files
[*.json]
indent_size = 2
max_line_length = 120

# YAML files
[*.yml]
indent_size = 2
max_line_length = 120

# HTML files
[*.html]
indent_size = 2
max_line_length = 120

# CSS/SCSS files
[*.css]
indent_size = 2
max_line_length = 120

# JavaScript/TypeScript files
[*.js]
indent_size = 2
max_line_length = 120

[*.ts]
indent_size = 2
max_line_length = 120

[*.tsx]
indent_size = 2
max_line_length = 120

# Shell script files
[*.sh]
indent_size = 2
max_line_length = 120

# Dockerfile
[Dockerfile]
indent_size = 2
max_line_length = 120

# Git commit message
[COMMIT_EDITMSG]
max_line_length = 72